<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".Dapitan">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="68dp"
                android:layout_marginTop="60dp"
                app:srcCompat="@drawable/dimsum" />

            <Button
                android:id="@+id/button12"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/menu"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="menu" />

            <Button
                android:id="@+id/button13"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/check"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="@string/check" />

            <RatingBar
                android:id="@+id/ratingBar7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="1dp"
                android:numStars="5"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="65dp"
                android:paddingTop="5dp"
                android:stepSize=".5" />

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_marginLeft="68dp"
                app:srcCompat="@drawable/kfc" />

            <Button
                android:id="@+id/button14"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/menu"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="menu" />

            <Button
                android:id="@+id/button15"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/check"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="@string/check" />

            <RatingBar
                android:id="@+id/ratingBar8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="1dp"
                android:numStars="5"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="65dp"
                android:paddingTop="5dp"
                android:stepSize=".5" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="225dp"
                android:layout_height="225dp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="68dp"
                app:srcCompat="@drawable/jolli" />

            <Button
                android:id="@+id/button16"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/menu"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="menu" />

            <Button
                android:id="@+id/button17"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="107dp"
                android:layout_marginTop="10dp"
                android:background="@android:color/holo_green_dark"
                android:fontFamily="@font/archivo_black"
                android:text="@string/check"
                android:textAlignment="center"
                android:textColor="@android:color/white"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:text="@string/check" />

            <RatingBar
                android:id="@+id/ratingBar9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="1dp"
                android:numStars="5"
                android:paddingBottom="20dp"
                android:paddingLeft="50dp"
                android:paddingRight="65dp"
                android:paddingTop="5dp"
                android:stepSize=".5" />

        </LinearLayout>
    </ScrollView>

    <TextView
        android:id="@+id/DapitanTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/asap"
        android:text="DAPITAN"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="40sp"
        android:textStyle="bold" />

</RelativeLayout>