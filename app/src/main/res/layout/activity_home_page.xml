<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/homepage"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/holo_orange_light"
    tools:context=".HomePage">

    <TextView
        android:id="@+id/greet"
        android:layout_width="308dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="22dp"
        android:fontFamily="@font/amiko"
        android:text='Mga Tomasino eto na ang sagot sa "kahit saan" at "ikaw bahala" sa oras ng kainan'
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="14sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/espana"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="122dp"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="EspaÃ±a"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <Button
        android:id="@+id/lacson"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="208dp"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="A.H.Lacson"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="213dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/lacson"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25dp"
        android:fontFamily="@font/archivo_black"
        android:text="OR"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="35sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/noval"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="172dp"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="P.Noval"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <Button
        android:id="@+id/dapitan"
        android:layout_width="303dp"
        android:layout_height="76dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="88dp"
        android:background="@android:color/holo_green_dark"
        android:fontFamily="@font/alfa_slab_one"
        android:text="Dapitan"
        android:textColor="@android:color/background_light"
        android:textSize="40sp" />

    <TextView
        android:id="@+id/title"
        android:layout_width="350dp"
        android:layout_height="143dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/pacifico"
        android:text="Streats"
        android:textAlignment="center"
        android:textColor="@android:color/background_light"
        android:textSize="50sp" />

</RelativeLayout>